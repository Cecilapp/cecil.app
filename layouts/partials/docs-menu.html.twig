<div class="border rounded w-48">
	<ul class="list-reset">
    {%- for item in site.pages|filter_by('section','documentation')|sort_by_weight -%}
      {%- if item.id != 'documentation/index' -%}
    <li>
      <a href="{{ url(item) }}" class="menu-item block p-2 hover:bg-gray-100{% if url(page) == url(item) or url(page) == url(item)|trim('/') %} font-bold border-blue border-l-2{% endif %}">{{ item.title }}</a>
    </li>
      {%- endif -%}
    {%- endfor -%}
	</ul>
</div>
