{% extends "default.html.twig" %}

{% block title %}
{% if page.name == 'download' %}
<h1>{{ page.title }}</h1>
{% endif %}
{% endblock title %}
{% block subcontent %}
{% if page.name == 'documentation' %}
<hr />
<ol>
{% for item in site.pages|sortByDate|filterBy('section', 'documentation') %}
<li><a href="{{ url(item) }}">{{ item.title|slice(2) }}</a></li>
{% endfor %}
</ol>
{% endif %}
{% endblock subcontent %}
