{% extends 'index.html.twig' %}

{% block content %}
<div class="container">
  <div class="columns docs-layout">
    <div class="one-fourth column">
      <!-- menu -->
      <nav class="menu docs-menu">
{% for item in site.pages|sortByDate|filterBy('section', 'documentation') %}
{% if item.id != 'documentation/index' %}
        <a class="menu-item{% if url(page) == url(item) or url(page) == url(item)|trim('/') %} selected{% endif %}" href="{{ url(item) }}">{{ item.title|slice(2) }}</a></li>
{% endif %}
{% endfor %}
      </nav>
    </div>
    <div class="three-fourths column markdown-body">
      {{ page.content }}
    </div>
  </div>
</div>

{% endblock content %}
